<%- include("partials/header") %>

<div class = "ui main text container">
	<div class="ui huge header">GeeBlok</div>
		<div class = "ui top attached segment">
			<div class = "ui divided items">
				<% blogs.forEach(function(blog){  %>
					<div class = "item">
						<div class = 'image'>
							<img src = "<%=blog.image%>">
						</div>
						<div class = "content">
							<a class = "header" href = "/blogs/<%= blog._id%>"><%= blog.title%></a>
						<div class = "meta">
							<span><%= blog.created.toDateString() %></span>	
						</div>
						<div class = "descripiton">
							<p>
							<%= blog.body.substring(0, 100) %>...
							</p>
							</div>
						<div class = "extra">
							 <a class = "ui basic black button" href = "/blogs/<%= blog._id%>">Read More </a>
							<!-- <button class="ui black basic button" href = "/blogs/<%= blog._id%>">Read More</button> -->
							</div>
						</div>
		</div>	
	<% }) %>
	</div>
	
</div>

</div>

<%- include("partials/footer") %>